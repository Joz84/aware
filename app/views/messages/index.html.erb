<div class="aware-wrapper bg-orange">

  <div class="container">
    <h1>Discutons</h1>
    <% if @messages %>
      <% @messages.each do |message| %>
        <div class="row">
          <div class="col-xs-12">
            <h2><%= message.user.first_name %></h2>
            <p><%= message.content %></p>
          </div>
        </div>
      <% end %>
    <% end %>

    <div class="row">
      <%= simple_form_for @message, url: game_skill_messages_path(@game_skill) do |f| %>
        <%= f.input :content, label: false %>
        <%= f.button :submit, 'Send' %>
      <% end %>
    </div>
  </div>
</div>
