<div class="navbar-wagon bg-blue">
  <!-- Logo -->

  <% if !current_user.nil? && !current_user.photo.nil? %>
      <%= cl_image_tag current_user.photo.path, class: "avatar", crop: :fill %>
  <% end %>

  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <% if !current_user.nil? %>
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= link_to current_user do %>
            <i class="fa fa-user"></i> Profile
          <% end %>
        </li>
        <li>
          <%= link_to root_path do %>
            <i class="fa fa-home"></i> Home
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
          <% end %>
        </li>
      </ul>
    </div>
  <% else %>
    <div class="color-white">
      <%= link_to "S'inscrire", new_user_registration_path, class: "color-white" %> /
      <%= link_to "Se connecter", new_user_session_path, class: "color-white" %>
    </div>
  <% end %>
</div>

